<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="goParty.Pages.EntryPage"
             Title="{Binding Title}">
    <ContentPage.Content>
        <Grid>
            <Grid.ColumnDefinitions >
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Image Grid.RowSpan="2" Aspect="AspectFill" Source="party.jpg"/>
            <ActivityIndicator Grid.Row="0" Grid.Column="0" Color="Red" IsRunning="{Binding IsBusy}" VerticalOptions="Center" HorizontalOptions="Center"/>
            <Button Grid.Row="1" BackgroundColor="Blue"
                    BorderRadius="10"
                    Command="{Binding LoginCommand}"
                    Text="Login with Facebook"
                    TextColor="White" 
                    HorizontalOptions="FillAndExpand" VerticalOptions="End"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>