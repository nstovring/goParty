<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:av="clr-namespace:goParty.Views"
             x:Class="goParty.Views.AtendeeView"
             x:Name="AttendeeView"
             >
  <ContentView.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <av:CardListView Grid.Row="0" Grid.RowSpan="2" ItemsSource="{Binding Attendees}" HorizontalOptions="FillAndExpand"/>
        </Grid>
    </ContentView.Content>
</ContentView>